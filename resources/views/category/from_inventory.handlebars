<h1 class="mb-4 text-center">📂 Categorias de {{inventoryName}}</h1>

<a href="/inventory" class="btn btn-outline-primary mb-4">← Voltar aos Inventários</a>

<form action="/category" method="POST" class="card p-4 shadow-sm mb-4">
  <input type="hidden" name="inventory" value="{{inventoryId}}">
  <div class="input-group">
    <input type="text" name="name" placeholder="Nome da categoria" class="form-control" required>
    <button type="submit" class="btn btn-success w-100">➕ Adicionar Categoria</button>
  </div>
</form>

<div class="row g-4">
  {{#each categories}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title fw-bold">{{this.name}}</h5>
          <p class="text-muted">ID: {{this.id}}</p>

          <a href="/product/fromCategory/{{this.id}}" class="btn btn-outline-primary btn-sm mb-2 w-100">
            📦 Produtos
          </a>

          <form action="/category?_method=PUT" method="POST" class="mb-2">
            <input type="hidden" name="id" value="{{this.id}}" />
            <input type="text" name="name" value="{{this.name}}" class="form-control form-control-sm mb-2" required />
            <button class="btn btn-outline-warning btn-sm w-100">✏️ Atualizar</button>
          </form>

          <form action="/category?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}" />
            <button class="btn btn-outline-danger btn-sm w-100">🗑️ Excluir</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{#unless categories.length}}
  <p class="text-muted text-center">Nenhuma categoria encontrada. Adicione uma nova categoria acima.</p>
{{/unless}}
