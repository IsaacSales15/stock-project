<h1 class="mb-4">Todas as Categorias</h1>

<a href="/inventory" class="btn btn-outline-dark mb-3">← Voltar aos Inventários</a>

{{#if this.inventoryId}}
  <form action="/category" method="POST" class="card p-3 mb-4">
    <input type="hidden" name="inventory" value="{{this.inventoryId}}" />
    <div class="mb-3">
      <label for="name" class="form-label">Nome da Categoria</label>
      <input type="text" name="name" placeholder="Nome da categoria" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-dark">Adicionar Categoria</button>
  </form>
{{/if}}

<div class="row">
  {{#each categories}}
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="text-muted">ID: {{this.id}}</p>
          <p class="text-muted">Inventário: {{this.inventoryName}}</p>

          <!-- Produtos -->
          <a href="/product/fromCategory/{{this.id}}" class="btn btn-outline-dark btn-sm mb-2">Produtos</a>

          <!-- Atualizar -->
          <form action="/category?_method=PUT" method="POST" class="mb-2">
            <input type="hidden" name="id" value="{{this.id}}" />
            <div class="mb-2">
              <input type="text" name="name" value="{{this.name}}" class="form-control form-control-sm" required />
            </div>
            <button class="btn btn-outline-warning btn-sm w-100">Atualizar</button>
          </form>

          <!-- Excluir -->
          <form action="/category?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}" />
            <button class="btn btn-outline-danger btn-sm w-100">Excluir</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>