<h1 class="mb-4">Gerenciar Inventários</h1>

<!-- Formulário de criação -->
<form action="/inventory" method="POST" class="mb-4">
  <div class="input-group">
    <input type="text" name="name" placeholder="Nome do inventário" class="form-control" required>
    <button type="submit" class="btn btn-primary">Adicionar</button>
  </div>
</form>

<!-- Lista de inventários -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each inventories}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>
          <!-- Formulário de edição -->
          <form action="/inventory?_method=PUT" method="POST" class="d-inline">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="text" name="name" value="{{this.name}}" class="form-control d-inline w-50" required>
            <button class="btn btn-warning btn-sm">Atualizar</button>
          </form>

          <!-- Formulário de exclusão -->
          <form action="/inventory?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="id" value="{{this.id}}">
            <button class="btn btn-danger btn-sm">Excluir</button>
          </form>
        </td>

        <!--  Exibição de produtos -->
        <td>
          <a href="/product/inventory/{{this.id}}" class="text-decoration-none">
              {{this.name}}
          </a>
      </td>

      </tr>
    {{/each}}
  </tbody>
</table>
