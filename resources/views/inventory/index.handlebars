<h1 class="mb-4 text-center">📦 Seus Inventários</h1>

<form action="/inventory" method="POST" class="mb-4">
  <div class="input-group shadow-sm">
    <input 
      type="text" 
      name="name" 
      placeholder="Digite o nome do inventário..." 
      class="form-control p-3" 
      required>
    <button type="submit" class="btn btn-success px-4">
      ➕ Adicionar
    </button>
  </div>
</form>

<div class="row g-4">
  {{#each inventories}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title fw-bold text-center mb-3">{{this.name}}</h5>
            <a href="/category/fromInventory/{{this.id}}" 
               class="btn btn-outline-primary btn-sm w-100 mb-3">
              📂 Ver categorias
            </a>
          </div>

          <form action="/inventory?_method=PUT" method="POST" class="mb-2">
            <input type="hidden" name="id" value="{{this.id}}" />
            <input type="text" name="name" value="{{this.name}}" 
                   class="form-control form-control-sm mb-2" required />
            <button class="btn btn-outline-warning btn-sm w-100">✏️ Atualizar</button>
          </form>

          <form action="/inventory?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}" />
            <button class="btn btn-outline-danger btn-sm w-100">🗑️ Excluir</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>
