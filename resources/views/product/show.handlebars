<h1 class="mb-4">Produtos da Categoria: {{category.name}}</h1>

<a
  href="/category/fromInventory/{{category.inventoryId}}"
  class="btn btn-secondary mb-3"
>← Voltar para Categorias</a>

<!-- Formulário para adicionar produto -->
<div class="card mb-4 p-4">
  <h5 class="mb-3">Adicionar novo produto</h5>
  <form action="/product" method="POST">
    <input type="hidden" name="category" value="{{category.id}}" />
    <input type="hidden" name="inventoryId" value="{{category.inventoryId}}" />
    <input type="hidden" name="redirectTo" value="/product/fromCategory/{{category.id}}" />

    <div class="mb-3">
      <label for="name" class="form-label">Nome do Produto</label>
      <input type="text" name="name" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="quantity" class="form-label">Quantidade</label>
      <input type="number" name="quantity" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Criar Produto</button>
  </form>
</div>

<!-- Lista de produtos existentes -->
<div class="row g-4"> 
  {{#each products}}
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 p-3 shadow-sm"> 
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="mb-1"><strong>ID:</strong> {{this.id}}</p>
          <p class="mb-2"><strong>Quantidade:</strong> {{this.quantity}}</p>

          <div class="quantity-control d-flex gap-2 mb-2">
            <!-- Botão + -->
            <form action="/product?_method=PUT" method="POST">
              <input type="hidden" name="id" value="{{this.id}}" />
              <input type="hidden" name="quantity" value="{{inc this.quantity}}" />
              <button class="btn btn-success btn-sm">+</button>
            </form>

            <!-- Botão - -->
            <form action="/product?_method=PUT" method="POST">
              <input type="hidden" name="id" value="{{this.id}}" />
              <input type="hidden" name="quantity" value="{{dec this.quantity}}" />
              <button class="btn btn-danger btn-sm">−</button>
            </form>
          </div>

          <!-- Input manual -->
          <form action="/product?_method=PUT" method="POST" class="d-flex gap-2">
            <input type="hidden" name="id" value="{{this.id}}" />
            <input
              type="number"
              name="quantity"
              class="form-control"
              min="0"
              value="{{this.quantity}}"
              required
            />
            <button class="btn btn-primary btn-sm">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{#unless products.length}}
  <p class="mt-4">Nenhum produto encontrado nesta categoria. Adicione um novo produto acima.</p>
{{/unless}}