{{!-- Botão para voltar a ver todos os produtos se estiver em um inventário específico --}}
{{#if inventoryId}}
  <a href="/product/all" class="btn btn-secondary mb-3">Ver todos os produtos</a>
{{/if}}

{{!-- Formulário de criação de produto --}}
<form action="/product" method="POST" class="card p-4 mb-4">
  {{#if inventoryId}}
    <input type="hidden" name="inventoryId" value="{{inventoryId}}" />
  {{/if}}

  <div class="mb-3">
    <label for="name" class="form-label">Nome do Produto</label>
    <input type="text" name="name" class="form-control" required />
  </div>

  <div class="mb-3">
    <label for="quantity" class="form-label">Quantidade</label>
    <input type="number" name="quantity" class="form-control" required />
  </div>

  {{#if categories.length}}
    <div class="mb-3">
      <label for="category" class="form-label">Categoria</label>
      <select name="category" class="form-select" required>
        {{#each categories}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <p class="text-muted">Nenhuma categoria disponível.</p>
  {{/if}}

  <button type="submit" class="btn btn-success">Criar Produto</button>
</form>

<hr class="my-4"/>

{{!-- Listagem de produtos agrupados por inventário --}}
<h2 class="mb-4">Lista de Produtos</h2>

{{#if groupedProducts}}
  {{#each groupedProducts}}
    <div class="card mb-4 shadow">
      <div class="card-header bg-light">
        Inventário: {{#if this.inventory}}{{this.inventory.name}}{{else}}Sem inventário{{/if}}
      </div>
      <ul class="list-group list-group-flush">
        {{#each this.products}}
          <li class="list-group-item">
            <strong>{{this.name}}</strong> (Qtd: {{this.quantity}})
            <br />
            Categoria: {{#if this.category}}{{this.category.name}}{{else}}Sem categoria{{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
{{/if}}

{{#unless groupedProducts}}
  <p class="text-muted">Nenhum produto disponível.</p>
{{/unless}}
