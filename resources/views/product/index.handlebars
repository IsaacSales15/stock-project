<h1 class="mb-4 text-center">üõí Produtos</h1>

{{#if inventoryId}}
  <a href="/product/all" class="btn btn-outline-primary mb-4">‚Üê Ver todos os produtos</a>
{{/if}}

<form action="/product" method="POST" class="card p-4 shadow-sm mb-5">
  {{#if inventoryId}}
    <input type="hidden" name="inventoryId" value="{{inventoryId}}" />
  {{/if}}

  <div class="mb-3">
    <label for="name" class="form-label">Nome do Produto</label>
    <input type="text" name="name" class="form-control" required />
  </div>

  <div class="mb-3">
    <label for="quantity" class="form-label">Quantidade</label>
    <input type="number" name="quantity" class="form-control" required />
  </div>

  {{#if categories.length}}
    <div class="mb-3">
      <label for="category" class="form-label">Categoria</label>
      <select name="category" class="form-select" required>
        {{#each categories}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  {{else}}
    <p class="text-muted">Nenhuma categoria dispon√≠vel.</p>
  {{/if}}

  <button type="submit" class="btn btn-gradient w-100">‚ûï Criar Produto</button>
</form>

<h2 class="mb-4">Lista de Produtos</h2>

{{#if groupedProducts}}
  {{#each groupedProducts}}
    <div class="card mb-4 shadow-sm">
      <div class="card-header fw-bold">
        Invent√°rio: {{#if this.inventory}}{{this.inventory.name}}{{else}}Sem invent√°rio{{/if}}
      </div>
      <ul class="list-group list-group-flush">
        {{#each this.products}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>{{this.name}}</strong> (Qtd: {{this.quantity}})
              <br />
              <small class="text-muted">Categoria: {{#if this.category}}{{this.category.name}}{{else}}Sem categoria{{/if}}</small>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
{{else}}
  <p class="text-muted">Nenhum produto dispon√≠vel.</p>
{{/if}}
